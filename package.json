{
    "name": "kelionai-v2",
    "version": "2.3.0",
    "description": "KelionAI â€” Asistent AI accesibil cu avatari 3D",
    "main": "server/index.js",
    "scripts": {
        "dev": "node server/index.js",
        "start": "node server/index.js",
        "test": "npx playwright test --project=chromium",
        "test:all": "npx playwright test",
        "test:unit": "jest",
        "test:coverage": "jest --coverage",
        "test:ci": "jest --coverage --ci --forceExit",
        "test:report": "npx playwright show-report",
        "setup": "bash scripts/setup-env.sh",
        "setup:full": "bash scripts/setup-full.sh",
        "setup:db": "bash scripts/setup-db.sh",
        "deploy": "bash scripts/deploy.sh",
        "health": "bash scripts/health-check.sh",
        "railway:setup": "node scripts/railway-setup.js",
        "railway:vars": "bash scripts/railway-env.sh"
    },
    "jest": {
        "testEnvironment": "node",
        "testMatch": [
            "**/__tests__/**/*.test.js"
        ],
        "collectCoverage": false,
        "collectCoverageFrom": [
            "server/**/*.js",
            "!server/node_modules/**",
            "!server/**/*.test.js"
        ],
        "coverageDirectory": "coverage",
        "coverageReporters": ["text", "text-summary", "lcov", "clover"],
        "coverageThreshold": {
            "global": {
                "branches": 35,
                "functions": 45,
                "lines": 50,
                "statements": 45
            }
        }
    },
    "dependencies": {
        "@sentry/browser": "^10.39.0",
        "@sentry/node": "^10.39.0",
        "@supabase/supabase-js": "^2.97.0",
        "cors": "^2.8.5",
        "dotenv": "^17.3.1",
        "express": "^4.22.1",
        "express-rate-limit": "^8.2.1",
        "form-data": "^4.0.0",
        "helmet": "^8.1.0",
        "node-fetch": "^2.7.0",
        "pg": "^8.18.0",
        "pino": "^10.3.1",
        "prom-client": "^15.1.3",
        "stripe": "^20.3.1",
        "three": "^0.160.1",
        "zod": "^4.3.6"
    },
    "engines": {
        "node": ">=20.0.0"
    },
    "devDependencies": {
        "@playwright/test": "^1.58.2",
        "jest": "^29.7.0",
        "supertest": "^7.2.2"
    }
}
